                </div>

            </div><!--end gameWrapper-->
        </div><!--end playGameWrapper-->
    </div><!--end hideGame-->

    <h1 id="matchFound">Match Found!</h1>
    <h1 id="noMatch">Not a Match!</h1>
    <h1 id="NewGameH1">New Game!!</h1>

    
    <!--============================================
                Pop up to post scores
    ==============================================-->
    <div id="postScorePopUp">
        <h1 id="goodJob">Good Job, <%= currentUser %> ! </h1>
        <div id="postScoreBody">
            <h3>Time Completed: <span id="timeSpan"></span></h3>
            <h3>Post score to Leaderboard?</h3>
        </div><!--end postScoreBody-->

        <div id="postScoreButtons">
            <button id="noPost">No</button>
            <form id="postScoreForm" action="/postScore" method="POST">
                <input id="yesPost" type="submit" value="Yes"/>
                <div class="hidden">
                    <input type="text" id="player_name" name="player_name">
                    <input type="text" id="date_played" name="date_played"/>
                    <input type="text" id="time_start" name="time_start"/>
                    <input type="text" id="time_end" name="time_end"/>
                    <input type="text" id="total_time" name="total_time"/>
                </div>
            </form>
        </div>
    </div><!--end postScorePopup-->

    <!--========================================
            Popup when leaving page
    ============================================-->   

    <div id="leavePagePopUp">
        <h1 id="leavePageH1">Hello, <%= currentUser %> ! </h1>
        <div id="leavePageBody">
            <h1>Leaving the page will cause your game to refresh.</h1>
            <h2>Are you sure you want to leave the page?</h2>
            <img src="photos/helloPlayer.jpeg" />
        </div><!--end leavePageBody-->
        <div id="leavePageButtons">
            <button id="leavePage">Yes</button>
            <button id="stayOnPage">No</button>
        </div><!--end leavePageButtons-->
    </div><!--end leavePagePopUP-->

    <script src="js/updateClock.js"></script>
    <script src="js/memoryGame.js"></script>
</body>
</html>