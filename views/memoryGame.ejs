                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                </div>

                <div class="row">
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                </div>

                <div class="row">
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div> 
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                    <div class="card"><img class="cardImg" src=""/><div class="card_back"></div></div>
                </div>

